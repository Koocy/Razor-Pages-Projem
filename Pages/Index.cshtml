            </select>
            <label id="sehir">Yükleniyor...</label>
            <label id="sicaklik">Yükleniyor...</label>
            <button type="button" onclick="havaDurumunuAl()">YENİLE</button>
            <img id="icon">
            <label id="saat">Yükleniyor...</label>
        </div>

        <div class="formKismi">

            <table>
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>İsim</th>
                        <th>Yaş</th>
                    </tr>
                </thead>

                <tbody>
                    @foreach (var row in Model.Kisiler)
                    {
                        <tr>
                            <td>@row.ID</td>
                            <td>@row.isim</td>
                            <td>@row.yas</td>
                        </tr>
                    }
                </tbody>
            </table>

            <div class="rowPairs">
                <label for="yeniIsim">İsim:</label>
                <input asp-for="yeniIsim" name="yeniIsim" />
            </div>

            <div class="rowPairs">
                <label for="yeniYas">Yaş:</label>
                <input asp-for="yeniYas" name="yeniYas" class="no-spinners" />
            </div>

            <button type="submit" class="formDugmeleri" asp-page-handler="Ekle">EKLE</button>

           @if (Model.Error)
            {
                <label style="display: flex; color:red; font-size: 20px; flex-wrap: wrap;">Lütfen "İsim" kısmına bir metin, "Yaş" kısmına bir doğal sayı girdiğinizden emin olun.</label>
            }
        </div>

    </form>

    <script src="~/JS/script.js"></script>
</body>
